
<body class="container-fluid">
    <div somebox>
        @using (Html.BeginForm("Animals", "Home", FormMethod.Post))
        {
            <label for="animalName">Choose an animal to learn more:</label>

            <select name="animalName" id="animalName">
                <option value="Blue Whale">Blue Whale</option>
                <option value="Japanese Spider Crab">Japanese Spider Crab</option>
                <option value="Blood Belly Comb Jelly">Blood Belly Comb Jelly</option>
                <option value="Clownfish">Clownfish</option>
                <option value="Green Turtle">Green Turtle</option>
            </select>
            <br />
            <button type="submit" class="name noselect">Learn more</button>
        }
    </div>
    
<div class="animalGallery">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img id="CarouselImg1" src="~/Images/bw1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img id="CarouselImg2" src="~/Images/bw2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img id="CarouselImg3" src="~/Images/bw3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
</div>
    <script src="~/Scripts/Site.js"></script>
</body>

